{
  "manifest_version": 2,
  "name": "Github Link Uberizer",
  "version": "0.3",
  "description": "Enhance github links in page where you navigate. Extract repository freshness and display as a badge",
  "page_action" :
  {
    "default_icon" : "images/icon-19x19.png",
    "default_title" : "GLU."
  },
  "permissions": [
    "tabs",
    "storage"
	],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": ["js/jquery-2.1.4.min.js", "js/filter.js"],
      "css": ["css/mine.css"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "icons" : {
  	"16": "images/icon-16x16.png",
    "19": "images/icon-19x19.png",
    "48": "images/icon-128x128.png",
    "128": "images/icon-128x128.png",
    "130": "images/icon-130x130.png",
    "550": "images/icon-550x550.png"
  },
  "background": {
    "persistent": false,
    "page": "background.html"
  },
  "options_ui" : {
    "chrome_style": true,
    "page": "options.html"
  },
  "web_accessible_resources": [
    "images/green-1.png",
    "images/red-1.png",
    "images/yellow-1.png",
    "images/green-2.png",
    "images/red-2.png",
    "images/yellow-2.png",
    "images/green-3.png",
    "images/red-3.png",
    "images/yellow-3.png",
    "images/green-4.png",
    "images/red-4.png",
    "images/yellow-4.png"
  ]
}
